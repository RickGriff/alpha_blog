
<%= render 'shared/errors', obj: @article %>

<div class = "row"> 
    <!--above tyling using bootstrap HTML-->
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
    
    <div class = "form-group", style = "width: 100%">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", style: "width: 100%", autofocus:true %>
    </div>
    <div class = "form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
    
    
    <div class = "form-group">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
    <% end %>
</div>




<%= link_to "Back to Articles Listing", articles_path %>