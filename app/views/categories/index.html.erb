<h1 align ="center">Categories Listing</h1>
<div class = "row center justify-content-center">
<%= will_paginate %>
</div>
<br>
  <% @categories.each do |category| %>
    <ul class = "listing">
      <div class = "row center justify-content-center">
        <div class = "card card-body bg-light col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to category.name, category_path(category) %>
          </li>
          <li><small><%= pluralize(category.articles.count, "Article") %></li></small>
        </div>
      </div>
    </ul>
  <% end %>
<br/>
<div class = "row center justify-content-center">
<%= will_paginate %>
</div>


