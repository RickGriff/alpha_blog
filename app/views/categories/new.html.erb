<h1 align="center">Create a New Category
</h1>

<%= render 'shared/errors', obj: @category %>

<div class = "row justify-content-center col-xs-6"> 
  <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class = "form-group", style = "width: 100%">
      <%= f.label :category %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter Category name", style: "width: 100%", autofocus:true %>
    </div>
    <div class = "form-group">
      <%= f.submit class: 'btn btn-primary btn-lg' %>  
    </div>
    <% end %>
</div>

<div class = "col-xs-4 col-offset-4">
  <%= link_to "Back to Articles Listing", articles_path %>
</div>