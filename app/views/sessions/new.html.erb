  
  <h1> Log In</h1>
  
  <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
    
    
    <div class = "form-group", style = "width: 100%">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter Your Email", style: "width: 100%", autofocus:true %>
    </div>
    <div class = "form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
    
    <div align = "center">
    <div class = "form-group">
    <%= f.submit "Login", class: 'btn btn-primary btn-lg' %> 
    </div>
    <% end %>
    
    
    <%= link_to "Cancel request and return to Articles Listing", articles_path %>
    </div>
    <br/>
    <br/>